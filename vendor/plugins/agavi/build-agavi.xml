<?xml version="1.0"?>
<project name="project" default="" basedir=".">
    <target name="">
      <php expression="require_once('vendor/plugins/agavi/config/environment.inc.php')"/>
      <command>
	    <fileset dir="${plugins.dir}/agavi/commands">
	        <include name="*Command.class.php"/>
        </fileset>
      </command>
    </target>
    
    <target name="test">
      <property file="${project.basedir}/var/cache/ag.project.cache"/>
      <input propertyname="project.dir" promptChar="?"
      		 defaultValue="${projectPath}" message="ProjectFullPath "/>
	  <input propertyname="module.dir" promptChar="?" message="ModuleName "/>
	  <input propertyname="test.dirs"
	  		 defaultValue="service,dao" promptChar="?" message="TestDirectory "/>
	  <foreach list="${test.dirs}" param="test.dir" target="doTest" />
    </target>
    
    <target name="doTest">
      <phpunit2 haltonfailure="false" haltonerror="false">
        <formatter type="plain" usefile="false"/>
          <batchtest>
            <fileset dir="${project.dir}/tests/modules/${module.dir}/${test.dir}">
                <include name="**/*Test.class.php"/>
            </fileset>
          </batchtest>
      </phpunit2>
    </target>
</project>
